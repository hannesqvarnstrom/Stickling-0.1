<h2 class="page-header">Search Plants</h2>

<form action="/plants" method="GET">
  <div>
    <label>Name</label>
    <input type="text" name="name" value="<%= searchOptions.name %>" />
  </div>
  <div>
    <label>Latin Name</label>
    <input type="text" name="latinName" value="<%= searchOptions.latinName %>" />
  </div>
  <%- include("_plantFamilies.ejs")%>
  <div>
    <label>Published After</label>
    <input
      type="date"
      name="publishedAfter"
      value="<%= searchOptions.publishedAfter %>"
    />
  </div>
  <div>
    <label>Published Before</label>
    <input
      type="date"
      name="publishedBefore"
      value="<%= searchOptions.publishedBefore %>"
    />
  </div>
  <button type="submit">Search</button>
</form>
<br />
<% plants.forEach(plant => { %>
<a href="/plants/<%= plant.id %>">
  <img height="150" width="100" src="<%= plant.coverImagePath %>"
/></a>
<% }) %>
