<h2 class="page-header"><%= author.name %></h2>

<a href="/authors/<%= author.id %>/edit">Edit</a>
<%- include('../partials/deleteForm', {url: `/authors/${author.id}`}) %> <% if
(plantsByAuthor.length > 0) { %>
<div>
  <h2>Plants by author</h2>
  <% plantsByAuthor.forEach(plant => {%>
  <a href="/plants/<%=plant.id%>">
    <img height="150" width="100" src="<%=plant.coverImagePath %>" />
  </a>
</div>
<%})%> <%}%>
